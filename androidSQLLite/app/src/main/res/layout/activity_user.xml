<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/owner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter owner company"
        app:layout_constraintBottom_toTopOf="@+id/version"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:id="@+id/version"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter version"
        app:layout_constraintTop_toBottomOf="@+id/owner"
        app:layout_constraintBottom_toTopOf="@+id/architecture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:id="@+id/architecture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter architecture"
        app:layout_constraintTop_toBottomOf="@+id/version"
        app:layout_constraintBottom_toTopOf="@+id/share"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:id="@+id/share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter market share"
        app:layout_constraintTop_toBottomOf="@+id/architecture"
        app:layout_constraintBottom_toTopOf="@+id/saveButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <Button
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="save"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/share"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>